{%block htmlWidget%}
    <div class="pageNum">
        {%if9 showPages%}
        <div class="pageNumPages">
            {%itemCount%} {%itemLabel%}:
            {%for item in pages%}
            
                {%if for_first%}
                    {%if2 item==currentPage%}
                        <span class="disabledPageNumBtn">&laquo;Prev</span>
                    {%else2%}
                        <a href="{%phpDroneURL%}/widgets/pageNum.php?action=setPage&amp;page={%currentPage-1%}" title="Go to page {%currentPage-1%}">&laquo;Prev</a>
                    {%end-if2%}
                {%end-if%}
                
                {%if8 cutedLow&&for_first%}
                    <span class="andSoOn">...</span>
                {%end-if8%}
                
                {%if item==currentPage%}
                    <span title="You are on page {%item%}">{%item%}</span>
                {%else%}
                    <a href="{%phpDroneURL%}/widgets/pageNum.php?action=setPage&amp;page={%item%}" title="Go to page {%item%}">{%item%}</a>
                {%end-if%}
                
                {%if8 cutedHigh&&for_last%}
                    <span class="andSoOn">...</span>
                {%end-if8%}
                
                {%if for_last%}
                    {%if2 item==currentPage%}
                        <span class="disabledPageNumBtn">Next&raquo;</span>
                    {%else2%}
                        <a href="{%phpDroneURL%}/widgets/pageNum.php?action=setPage&amp;page={%currentPage+1%}" title="Go to page {%currentPage+1%}">Next&raquo;</a>
                    {%end-if2%}
                {%end-if%}

            {%end-for%}
        </div>
        {%end-if9%}
        
        {%if9 showPrefs%}
        <div  class="pageNumPrefs">
            {%currentPerPage%} per page :
            {%for pref in prefs%}
                {%if pref==currentPerPage%}
                    <span title="Curently set at {%currentPerPage%} per page">{%currentPerPage%}</span>
                {%else%}
                    <a title="Switch to {%pref%} per page" href="{%phpDroneURL%}/widgets/pageNum.php?action=setPref&amp;prefName={%prefName%}&amp;pref={%pref%}">{%pref%}</a>
                {%end-if%}
            {%end-for%}
        </div>
        {%end-if9%}
        
        {%if9 showQuickJump%}
        <div class="pageNumQUickJump">
            Quick jump:{%quickJumpSelector%}
        </div>
        {%end-if9%}
        
    </div>
{%end-block%}
