    <label for='{%inputName%}'>{%inputLabel%}</label>
    {% if inputError %}
        <div class='error'><span>Error:</span> {%inputError%}</div>
    {% end-if %}
    <input class='textInput' type='{%inputType%}' id='{%inputName%}' name='{%inputName%}' value='{%inputValue%}' />
{%end-block%}
