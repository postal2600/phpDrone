{%block droneInput%}
    {%if inputLabel%}
        <label for='{%inputName%}'>
            {%if2 mandatoryMarker%}
                <span class='mandatoryMarker'>{%mandatoryMarker%}</span>
            {%end-if2%}
            {%inputLabel%}:
        </label>
    {%end-if%}
    {%if inputError%}
        <span class='inputError'><span>Error: </span>{%inputError%}</span>
    {%end-if%}
    <textarea class='textInput' rows='5' cols='9' id='{%inputName%}' name='{%inputName%}'>{%inputValue%}</textarea>
{%end-block%}
