{%block droneInput%}
    {%if inputLabel%}
        <label for='{%inputId%}'>
            {%if2 mandatoryMarker%}
                <span class='mandatoryMarker'>{%mandatoryMarker%}</span>
            {%end-if2%}
            {%inputLabel%}:
        </label>
    {%end-if%}
    {%if inputError%}
        <span class='inputError'><span>Error: </span>{%inputError%}</span>
    {%end-if%}
    {%for item in values%}
        <input type="radio" {%if for_index==0%} id='{%attributes.id%}'{%end-if%} class='radioButton' name='{%attributes.name%}' value='{%item.key%}' {%if item.selected%}checked='checked'{%end-if%}><span class='checkboxValue'>{%item.value%}</span><span class="checkboxDelimiter">&nbsp;</span>
    {%end-for%}
{%end-block%}
